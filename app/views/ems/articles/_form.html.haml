= form_for @article do |f|
  = label :article, :title
  = f.text_field :title
  - if @article.category
    - for c in Ems::Channel.joins(:categories).where(:ems_categories_channels => {:category_id => @article.category.id})
      %p= c.name
      = check_box_tag 'article[channel_ids][]', c.id, @article.channels.include?(c)
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  
  .actions
    = f.submit 'Save'