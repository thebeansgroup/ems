!!!
%html
  %head
    %meta{:charset => "utf-8"}
      %title EMS
      %meta{:content => "EMS", :name => "description"}
        %meta{:content => "Vincent Siebert", :name => "author"}
          = stylesheet_link_tag "ems/application", :media => "all"
          = javascript_include_tag "ems/application"
          = csrf_meta_tags
  %body

    =yield
    #wrapper
      #header
        .wrap.clearfix
          %h1#site_title{:data => {"bind" => "window.Ems.title"}}
          %ul#tabs.header-item
            %li{:data => {"foreach-nav" => "window.Ems.navLinks"}}
              %a{:data => {"bind" => "nav.text", "bind-href" => "nav.href", "addclass-current" => "nav.selected"}}
              %ul{:data => {"renderif" => "nav.secondary"}}
                %li.secondSub{:data => {"foreach-secnav" => "nav.secondary"}}
                  %a{:data => {"bind" => "secnav.text", "bind-href" => "secnav.href", "addclass-selected" => "secnav.selected"}}
      #content_wrapper
        %p#flashwarning.flashflash_notice{:data => {"showif" => "Ems.flash.success.length"}}
          %a.close{:href => "#", :onclick => "$('#flashnotice').hide(); return false"} ×
          %span{:data => {"bind" => "Ems.flash.success"}}
        %p#flashwarning.flashflash_notice{:data => {"showif" => "Ems.flash.error.length"}}
          %a.close{:href => "#", :onclick => "$('#flashwarning').hide(); return false"} ×
          %span{:data => {"bind" => "Ems.flash.error"}}
        %div#active_admin_content{:data => {"yield" => "main"}}
      %footer#footer
        %p
          \© The Beans Group #{Time.now.year}